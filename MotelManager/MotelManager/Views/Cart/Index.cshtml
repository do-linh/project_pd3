@model IEnumerable<MotelManager.Models.EF.Cart>

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_LayoutOrder.cshtml";
}

<h2>Cart</h2>

<table class="table">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Giá
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Tổng tiền
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.nameMotel
            </td>
            <td>
                @item.dprice
            </td>
            <td>
                @item.quantity
            </td>

            <td>
                @item.money
            </td>

            <td>
                <button class="btn btn-danger">
                    @Html.ActionLink("Xóa Phòng", "XoaGioHang", new { id = item.imotel })
                </button>
            </td>
        </tr>
    }

</table>
<button class="btn-primary" style="color:black">
    @Html.ActionLink("Đặt Phòng", "OrderRoom")
</button>