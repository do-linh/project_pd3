        //    $(".buttonComfirm").on("click", function () {
        //        $(".result").text("");
        //        $(".loading-icon").removeClass("hide");
        //        $(".buttonComfirm").attr("disabled", true);
        //        $(".btn-txt").text("Loading...");

        //        $("#btnSubmit").show();
        //        $("#btnSubmit1").hide();
        //    });
        //});
    </script>
