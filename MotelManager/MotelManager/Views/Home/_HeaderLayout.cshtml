    .btn-submit {
        background: #05222A;
        color: #fff;
        font-size: 1.5em;
        border: none;
        width: 100%;
        outline: none;
        -webkit-appearance: none;
        padding: .5em 0;
        transition: 0.5s all;
        -webkit-transition: 0.5s all;
        -moz-transition: 0.5s all;
        -o-transition: 0.5s all;
        margin-top: .5em;
        font-family: 'Josefin Sans', sans-serif;
    }

    .count-notification {
        margin-left: -10px
    }

    .notification-list {
        width: 300px;
        background-color: white;
        float: right;
        margin-top: -80px;
        margin-right: 70px;
        padding: 5px 10px 5px 10px;
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        z-index: 10
    }

    .show-notification {
        display: block;
    }

    .hide-notification {
        display: none;
    }

    .title-notification {
        font-weight: bold;
    }
</style>
<div class="header" id="home">
